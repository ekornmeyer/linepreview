<header>
<div class="row">
<div class="large-4 columns">
<%= image_tag 'logo.png' %>
</div>
<div class="large-8 columns">
<% if !signed_in? %>
<h1>Welcome to the store!</h1>
<h4><%= link_to 'Get Started', register_path, :class => 'action-button' %></h4>
<% else %>
<h1>Hello, <%= @current_customer.username %>!</h1>
<h4>Quick Links:</h4>
<ul>
<li class="ql-button"><%= link_to 'Manage your profile', edit_customer_path(current_customer) %></li>
<li class="ql-button"><%= link_to 'Manage your images', customer_assets_path(current_customer) %></li>
<li class="ql-button"><%= link_to 'View order history', '#' %></li>
<% end %>
</div>
<%= session[:cookies_orderid] %>

</div>
</header>